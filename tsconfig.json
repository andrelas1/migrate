{
  "compilerOptions": {
    "module": "CommonJS",
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "moduleResolution": "node",
    "baseUrl": "./"
  },
  "exclude": ["node_modules", "src/**/*.spec.ts"]
}
